{
	"manifest_version": 2,
	"name": "Ease my pain",
	"version": "1.0",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js": [ "content.js" ]
		}
	],
		"background": {
		"scripts": ["background.js"]
	},
	"permissions": [      // разрешения
	    "tabs","https://direct.yandex.ru/*","storage"
	],
	"browser_action": {
        "default_title": "Ease my pain",
        "default_popup": "popup.html"
    }
}